<Window x:Class="CourseChecker.WPF.Progressbar"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:local="clr-namespace:CourseChecker.WPF"
            mc:Ignorable="d" 
            Title="Progressbar" Height="200" Width="300" WindowStartupLocation="CenterOwner" >
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Bitte warten ..." FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <ProgressBar Name="prgBar" Width="250" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </StackPanel>
</Window>
